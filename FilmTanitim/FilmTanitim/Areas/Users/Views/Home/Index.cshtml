@model IEnumerable<FilmTanitim.Models.Movie>
@{
    ViewData["Title"] = "Home Page";
}
<br />
<h2 style="text-align:center;" class="text-primary">TÜM FİLMLER</h2>
<br />

<div class="row">
    <div class="col-3">
        @await Component.InvokeAsync("CategoryList")
    </div>
    @foreach (var item in Model)
    {
<div class="col-3">
    <div class="card" style="width: 18rem;">
        <img style="height:200px;width:100%;" src="@item.MovieImage" />
        <div class="card-body">
            <h5 class="card-title">@item.MovieName</h5>
            <p class="card-text">@item.MovieDescription.Substring(0, 50)...</p>
            <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-primary">Devamını Oku..</a>
            <input type="hidden" id="@item.MovieId" />
        </div>
    </div>
    <br />
    <br />
</div>
    }
</div>
